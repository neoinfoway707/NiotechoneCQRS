@using NiotechoneCQRS.Application.DTOs.RequestDTOs
@using NiotechoneCQRS.Domain.Entities
@{
    Layout = null;
}
@model LoginRequestDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/login.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

</head>
<body>

    <header class="top-bar">
        <span>English | Urdu</span>
    </header>

    <main class="page">
        <div class="login-card">

            <div class="avatar">
                <span class="avatar-icon">👤</span>
            </div>

            <form asp-controller="Login" asp-action="Login" method="post">

                <!-- Company -->
                <div class="field">
                    <select class="input" name="CompanyId">
                        <option value="">Select Company</option>
                        @foreach (var company in (List<Company>)ViewBag.Companies)
                        {
                            <option value="@company.CompanyId">@company.CompanyName</option>
                        }
                    </select>
                </div>

                <!-- Email -->
                <div class="field">
                    <label class="field-label">Email</label>
                    <div class="input-wrapper">
                        <i class="fa-regular fa-envelope input-icon"></i>
                        <input class="input with-icon"
                               asp-for="Email"
                               type="email"
                               placeholder="Ex: Johndoe@financial.com" />
                    </div>
                </div>

                <!-- Password -->
                <div class="field">
                    <label class="field-label">Password</label>
                    <div class="input-wrapper password-field">
                        <i class="fa-regular fa-lock input-icon"></i>
                        <input class="input with-icon password-input"
                               asp-for="Password"
                               type="password"
                               id="password"
                               placeholder="Enter your password" />
                        <i class="fa-regular fa-eye eye" onclick="togglePassword()"></i>
                    </div>
                </div>


                <!-- Options -->
                <div class="options-row">
                    <label class="remember">
                        <input type="checkbox" />
                        Stay Signed In
                    </label>

                    <a href="#" class="forgot-pill">Forgot Password?</a>
                </div>

                <div class="terms-row">
                    <label class="terms-check">
                        <input type="checkbox" />
                        <span>
                            By clicking Register, By clicking RegisterBy clicking
                            RegisterBy clicking RegisterBy clicking Register
                        </span>
                    </label>
                </div>

                <button class="login-btn" type="submit">Login</button>
            </form>
        </div>
    </main>

    <footer class="footer">
        ©2026 Niotechone. All Rights Reserved.
    </footer>

    <script>
        function togglePassword() {
            const input = document.getElementById('password');
            input.type = input.type === 'password' ? 'text' : 'password';
        }
    </script>

    @if (ViewData.ModelState.ErrorCount > 0)
    {
        <script>
            alert("Invalid login credentials");
        </script>
    }

</body>
</html>
